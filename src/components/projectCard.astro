---
const { project } = Astro.props;
const { img, name, description } = project;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>projects</title>
    <style>
      .card {
        position: relative;
        width: 300px;
        height: 200px;
        overflow: hidden;
        border-radius: 7px;
      }

      .card img {
        width: 100%;
        height: 100%;

        border-radius: 7px;
        display: block;
        transition: transform 0.5s;
      }

      .card-overlay {
        width: 100%;
        height: 0;
        background: linear-gradient(rgba(0, 0, 0, 0.6), #ff004f);
        border-radius: 7px;
        position: absolute;
        bottom: 0;
        left: 0;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 0 40px;
        text-align: center;
        font-size: 14px;
        transition: height 0.5s;
      }
      .card:hover img {
        transform: scale(1.1);
      }

      .card:hover .card-overlay {
        height: 100%;
      }

      .card-overlay h3 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
      }

      .card-overlay p {
        margin: 10px 0 0;
        font-size: 16px;
      }

      .card-button {
        display: inline-block;
        padding: 10px;
        background-color: #0077ff;
        color: #fff;
        border: none;
        border-radius: 5px;
        margin-top: 10px;
        text-decoration: none;
        transition: background-color 0.2s ease-in-out;
      }

      .card-button:hover {
        background-color: #0055cc;
      }
    </style>
  </head>
  <body>
    <div class="card w-full mx-auto">
      <a href="https://rafidmuhymin.com/" target="_blank" rel="noopener">
        <img src={img} alt="Card Image" />
        <div class="card-overlay text-white">
          <h3>{name}</h3>
          <p>{description}</p>
          <button class="card-button">Visit Website</button>
        </div>
      </a>
    </div>
  </body>
</html>
